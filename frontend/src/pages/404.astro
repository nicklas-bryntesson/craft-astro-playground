---
import Layout from '../layouts/Layout.astro';
export const prerender = true;
---

<Layout title="404 - Page Not Found">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-6xl font-bold mb-4">404 - Page Not Found</h1>
    <p class="mb-4">Sorry, we couldn't find the page you're looking for.</p>
    <a 
      href="/" 
      class="text-red-600 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-red-600 focus-visible:ring-offset-2 rounded"
    >
      Return to homepage
    </a>
  </div>
</Layout>
