---
const { siteName, logo } = Astro.props;
---

<div class="siteLogo">
	<a href="/">
		{logo?.length > 0 ? (
			<>
				<span class="screenReaderText">{siteName}</span>
				<img 
					src={logo[0].url} 
					alt={logo[0].alt} 
					class=""
				/>
			</>
		) : (
			siteName
		)}
	</a>
</div>

<style scoped>
.siteLogo {
	display: grid;
	place-items: center;

	> a {
	display: inline-block;
	color: var(--text--primary);
	text-decoration: none;
	font-family: var(--fontFamily--heading);
	font-weight: var(--fontWeight--heading);
/* 	padding-inline: 0.5rem;
	padding-block: 0.25rem;
	border: var(--borderThickness) dashed var(--text--primary);
	border-radius: 0.25em; */

	&:focus:not(:focus-visible) {
		outline: 0;
	}

	&:focus-visible {
		outline-width: 2px;
		outline-style: var(--focus--outlineStyle);
		outline-color: var(--focus--outlineColor--primary);
		outline-offset: 3px;
	}
	}
}
</style>