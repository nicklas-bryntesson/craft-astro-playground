---
import BlockQuote from './blocks/BlockQuote.astro';
import Callout from './blocks/Callout.astro';
import Image from './blocks/Image.astro';
import Text from './blocks/Text.astro';
import TextWithImage from './blocks/TextWithImage.astro'

const { chunks } = Astro.props;
---
{chunks?.map((block: any) => {
  switch (block.__typename) {
    case 'image_Entry':
      return <Image block={block} />;
    case 'callout_Entry':
      return <Callout block={block} />;
    case 'blockquote_Entry':
      return <BlockQuote block={block} />;
    case 'textWithImage_Entry':
      return <TextWithImage block={block} />;
    case 'CkeditorMarkup':
      return <Text block={block} />;
    default:
      return <p>Unknown block type: {block.__typename}</p>;
  }
})} 