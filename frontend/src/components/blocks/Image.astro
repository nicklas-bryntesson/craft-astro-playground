---
const { block } = Astro.props;
const image = block.image[0];
---
<figure class="my-12 not-prose">
  <img src={image.url} alt={block.title || ''} width={image.width} height={image.height} class="w-full h-auto rounded-lg" loading="lazy" />
  {block.title && <figcaption class="text-center text-sm italic mt-2">{block.title}</figcaption>}
</figure> 