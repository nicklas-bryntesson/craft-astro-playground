---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import ThemeSwitch from './ThemeSwitch.astro'
import SkipLink from  './SkipLink.astro'

const { currentPath, pages, siteName, logo } = Astro.props;
---

<div class="headerContainer">

  <SkipLink />
  
  <header>

      <Logo {siteName} {logo} />

      <Navigation {pages} {currentPath} />

      <ThemeSwitch />

  </header>
</div>

<style scoped>
 :where(.headerContainer) {
  display: grid;
  grid-template-columns: var(--centerGrid--columns);
  border-block-end: 1px solid var(--borderColor--tertiary);
  background-color: var(--header--backgroundColor);
  view-transition-name: main-header;

  > header {
    grid-column: main;
    display: flex;
    align-items: center;
  }
}
</style>
